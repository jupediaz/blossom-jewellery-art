{
    auto_https off
    admin localhost:2019
}

dev.blossomjewellery.art {
    tls .claude/dev.blossomjewellery.art.pem .claude/dev.blossomjewellery.art-key.pem
    reverse_proxy localhost:8525

    log {
        output file .claude/caddy.log
        level INFO
    }

    header {
        Access-Control-Allow-Origin *
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Access-Control-Allow-Headers *
    }
}
